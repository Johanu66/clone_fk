<%= form_with(model: post, local: true, url: form_url) do |form| %>
  <% if post.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(post.errors.count, "error") %> prohibited this post from being saved:</h2>

      <ul>
      <% post.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field m-5">
    <%= form.label "Titre" %>
    <%= form.text_field :title %>
  </div>

  <div class="field m-5">
    <%= form.label "Contenu" %>
    <%= form.text_area :content %>
  </div>

  <div class="field m-5">
    <%= form.label "Photo" %>
    <%= form.file_field :photo %>
  </div>

  <div class="actions m-5">
    <%= form.submit submit_text, class: "btn btn-primary text-white" %>
  </div>
<% end %>
